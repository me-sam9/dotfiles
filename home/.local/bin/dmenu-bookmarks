#!/bin/sh

XDG_DATA_HOME=${XDG_DATA_HOME:-"$HOME/.local/share"}
chosen=$(cat "$XDG_DATA_HOME"/bookmarks/main | dmenu)

[ -z "$chosen" ] && exit 1

if [ -n "$1" ]; then
	xdotool type "$chosen"
else
	printf "%s" "$chosen" | xclip -selection clipboard
	notify-send "'$chosen' copied to clipboard." &
fi
